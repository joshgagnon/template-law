{
    "extends": "G01: Letter Template",
    "description": "Letter of Engagment - Conveyancing",
    "title": "CV01: Letter of Engagment - Conveyancing",
    "properties": {
        "isNewClient": {
            "type": "boolean",
            "title": "Is new client"
        },
        "recipient": {
            "ignore": true
        },
        "client": {
             "$ref": "#/definitions/recipient",
             "title": "Client (recipient)"
        },
        "matter": {
            "type": "object",
            "properties": {
               "matterType": {
                    "title": "Matter Type",
                    "enum": [
                        "purchase",
                        "sale",
                        "refinance"
                    ],
                    "enumNames": [
                        "Purchase",
                        "Sale",
                        "Refinance"
                    ]
                },
                "assets": {
                    "items": {
                        "type": "object",
                        "properties": {
                            "address": {
                                "title": "Address",
                                "type": "string"
                            },
                            "required": ["address"]
                        }
                    },
                    "minItems": 1,
                    "title": "Properties",
                    "type": "array"
                }
            },
            "required": ["matterType"]
        },
        "disclosure": {
            "type": "string",
            "title": "Disclosure of Interests",
            "description": "e.g. We act for Company ABC Ltd"
        },
        "subject": {
            "ignore": true
        }
    },
    "aliases": {
        "client": "recipient"
    },
    "required": ["client"],
    "mappings": {
        "price": {
            "purchase": "$880",
            "sale": "$780",
            "refinance": "$680"
        }
    }
}