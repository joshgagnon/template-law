{
    "extends": "G01: Letter Template",
    "description": "Letter of Engagement - Conveyancing",
    "title": "CV01: Letter of Engagement - Conveyancing",
    "properties": {
        "isNewClient": {
            "type": "boolean",
            "title": "Is New Client"
        },
        "recipient": {
            "ignore": true
        },
        "client": {
             "$ref": "#/definitions/recipient",
             "title": "Client (recipient)"
        },
        "matter": {
            "type": "object",
            "properties": {

                "assets": {
                    "$ref": "#/definitions/assets"
                },
                "conveyancing": {
                    "type": "object",
                    "properties": {
                        "matterType": {
                            "title": "Conveyancing Type",
                            "enum": [
                                "purchase",
                                "sale",
                                "refinance"
                            ],
                            "enumNames": [
                                "Purchase",
                                "Sale",
                                "Refinance"
                            ]
                        }
                    },
                    "required": ["matterType"]
                }

            },
            "required": ["conveyancing", "assets"]
        },
        "disclosure": {
            "type": "string",
            "title": "Disclosure of Interests",
            "description": "e.g. We act for Company ABC Ltd"
        },
        "subject": {
            "ignore": true
        }
    },
    "aliases": {
        "client": "recipient"
    },
    "required": ["client"],
    "mappings": {
        "price": {
            "purchase": "$880",
            "sale": "$780",
            "refinance": "$680"
        },
        "disbursements": {
            "purchase": "$160",
            "sale": "$80",
            "refinance": "$160"
        },
        "priceIncGST": {
            "purchase": "$1,205.75",
            "sale": "$1,010.76",
            "refinance": "$975.75"
        },
        "verbToNoun": {
            "purchase": "purchasing",
            "sale": "selling",
            "refinance": "refinancing"
        }

    }
}

