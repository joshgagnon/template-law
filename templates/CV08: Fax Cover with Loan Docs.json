{
    "extends": "G01: Letter Template",
    "description": "Fax Cover with Loan Docs",
    "title": "CV08: Fax Cover with Loan Docs",
    "properties": {
        "matter": {
            "type": "object",
            "properties": {
                "assets": {
                    "$ref": "#/definitions/assets"
                },
                "letterFinancier": {
                    "type": "object",
                    "properties": {
                        "matterType": {
                            "title": "Letter To Financier Type",
                            "enum": [
                                "purchase",
                                "refinance"
                            ],
                            "enumNames": [
                                "Purchase",
                                "Refinance"
                            ]
                        }
                    },
                    "oneOf": [
                        {
                            "properties": {
                                "matterType": {
                                    "enum": ["purchase"]
                                }
                            }
                        },
                        {
                            "properties": {
                                "matterType": {
                                    "enum": ["refinance"]
                                }
                            }
                        }
                    ],
                    "x-hints": {
                        "form": {
                            "selector": "matterType"
                        }
                    }
                }
            },
            "requires": ["assets", "letterFinancier"]
        },
        "recipient": {
            "ignore": true
        },
        "mortgageeInstructions": {
            "type": "object",
            "title": "Mortgagee Instructions",
            "properties": {
                "instructionsDate": {
                    "title": "Date of Instructions from New Mortgagee",
                    "type": "string",
                    "x-hints" : {
                        "form": {
                          "inputComponent": "date"
                        }
                    }
                },
                "mortgageeReference": {
                    "title": "New Mortgagee Reference Number",
                    "type": "string"
                },
                "amountAdvanced": {
                    "title": "Amount Advanced Under Loan",
                    "type": "number"
                }
            }
        },
        "client": {
             "$ref": "#/definitions/recipient",
             "title": "Client"
        },
        "newMortgagee": {
             "$ref": "#/definitions/recipient",
             "title": "New Mortgagee (recipient)"
        },
        "newMortgageeDocuments": {
            "items": {
                "type": "object",
                "properties": {
                    "documentName": {
                        "title": "Document Name",
                        "type": "string"
                    },
                    "documentDate": {
                        "title": "Document Date",
                        "type": "string",
                        "x-hints" : {
                            "form": {
                              "inputComponent": "date"
                            }
                        }
                    },
                    "sentToBank": {
                        "title": "Send To Bank",
                        "type": "boolean"
                    }
                },
                "required": ["documentName"]
            },
            "title": "Documents to be sent to Mortgagee",
            "type": "array"
        },
        "subject": {
            "ignore": true
        }
    },
    "required": ["dateString", "client", "newMortgagee", "facilityAgreementDate", "mortgageeInstructions"]
}