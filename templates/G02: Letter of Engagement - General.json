{
    "extends": "Letter Template.json",
    "description": "Letter of Engagment",
    "title": "Letter of Engagment",
    "properties": {
        "matter": {
            "type": "object",
            "properties": {
                "name": {
                    "type": "string",
                    "title": "Matter Name",
                    "description": "e.g. Liquidation Advice"
                },
                 "description": {
                    "type": "string",
                    "title": "Description",
                    "description": "e.g. advice regarding the Liquidation of the company"
                }
            },
            "required": ["name"]
        },
        "disclosure": {
            "type": "string",
            "title": "Disclosure of Interests",
            "description": "e.g. We act for Company ABC Ltd"

        },
        "subject": {
            "ignore": true
        },
        "fee": {
            "title": "Fees",
            "type": "object",
            "properties": {
                "feeType": {
                    "title": "Fee",
                    "enumNames": [
                        "Unspecified",
                        "Pre-agreed",
                        "Estimated"
                    ]
                }
            },
            "oneOf": [
                {
                    "properties": {
                        "feeType": {
                            "enum": [
                                "none"
                            ]
                        }
                    }
                },
                {
                    "properties": {
                        "feeType": {
                            "enum": [
                                "preagreed"
                            ]
                        },
                        "description": {
                            "title": "Fee Description",
                            "type": "string"

                        },
                        "services": {
                            "type": "string",
                            "title": "Quoted Services"
                        }
                    },
                    "required": ["description"]
                },
                {
                    "properties": {
                        "feeType": {
                            "enum": [
                                "estimated"
                            ]
                        },
                        "description": {
                            "title": "Fee Description",
                            "type": "string"

                        },
                        "services": {
                            "type": "string",
                            "title": "Quoted Services"
                        }
                    },
                    "required": ["description"]
                }],
            "x-hints": {
                "form": {
                    "selector": "feeType"
                }
            }
        }
    },
    "required": ["fee"]
}