{
    "extends": "Letter Template.json",
    "description": "File Closing Letter",
    "title": "File Closing Letter",
    "properties": {
        "matter": {
            "type": "object",
            "properties": {
                "name": {
                    "type": "string",
                    "title": "Matter Name"
                },
                 "reason": {
                    "type": "string",
                    "title": "Reason matter has ended",
                    "description": "e.g. the transaction has been completed"
                }
            },
            "required": ["name", "reason"]
        },
        "subject": {
            "ignore": true
        },
        "documents": {
            "type": "array",
            "title": "Documents",
            "items": {
                "title": "Document name and date",
                "type": "string",
                "minLength": 1
            }
        }
    },
    "required": ["matter"]
}