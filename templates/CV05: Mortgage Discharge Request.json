{
    "extends": "G01: Letter Template",
    "description": "Mortgage Discharge Request",
    "title": "CV05: Mortgage Discharge Request",
    "properties": {
        "matter": {
            "type": "object",
            "properties": {

                "mortgageInstrumentNumber": {
                    "type": "string",
                    "title": "Mortgage Instrument Number"
                },
                "assets": {
                    "$ref": "#/definitions/assets"
                },
                "discharge": {
                    "type": "object",
                        "properties": {
                            "matterType": {
                                "title": "Matter Type",
                                "enum": [
                                    "entered into an agreement to sell",
                                    "refinancing"
                                ]
                        }
                    },

                    "oneOf": [
                        {
                            "properties": {
                                "matterType": {
                                    "enum": ["entered into an agreement to sell"]
                                }
                            }
                        },
                        {
                            "properties": {
                                "matterType": {
                                    "enum": ["refinancing"]
                                }
                            }

                        }
                    ],
                    "x-hints": {
                        "form": {
                            "selector": "matterType"
                        }
                    }
                }
            },
            "required":["mortgageInstrumentNumber", "discharge"]

        },
        "recipient": {
            "ignore": true
        },
        "existingMortgagee": {
             "$ref": "#/definitions/recipient",
             "title": "Existing Mortgagee (recipient)"
        },

        "ownerNames": {
            "items": {
                "type": "string",
                "title": "Owner Name",
                "minLength": 1
            },
            "minItems": 1,
            "title": "Owner Names",
            "type": "array"
        },
        "settlementDate": {
            "title": "Settlement Date",
            "type": "string",
            "x-hints" : {
                "form": {
                  "inputComponent": "date"
                }
            }
        },
        "subject": {
            "ignore": true
        }
    },
    "required": ["existingMortgagee", "ownerNames", "settlementDate", "identifierNumber", "registryLocation"],
    "aliases": {
        "existingMortgagee": "recipient"
    }
}