{
    "extends": "Letter Template.json",
    "description": "Letter to Fincancier Enclosing Originals",
    "title": "Letter to Fincancier Enclosing Originals",
    "properties": {
        "matter": {
            "type": "object",
            "properties": {
                "assets": {
                    "items": {
                        "type": "object",
                        "properties": {
                            "address": {
                                "title": "Address",
                                "type": "string"
                            }
                        },
                        "required": ["address"]
                    },
                    "minItems": 1,
                    "title": "Properties",
                    "type": "array"
                }
            }
        },
        "purchaserNames": {
            "items": {
                "type": "string",
                "title": "Purchaser Name"
            },
            "minItems": 1,
            "title": "Purchaser Names",
            "type": "array"
        },
        "facilityAgreementDate": {
            "title": "Date of Facility Agreement",
            "type": "string",
            "x-hints" : {
                "form": {
                  "inputComponent": "date"
                }
            }
        },
        "solicitorCertDate": {
            "title": "Date of Solicitorâ€™s Certificate",
            "type": "string",
            "x-hints" : {
                "form": {
                  "inputComponent": "date"
                }
            }
        },
        "documents": {
            "items": {
                "type": "object",
                "properties": {
                    "documentName": {
                        "title": "Document Name",
                        "type": "string"
                    },
                    "documentDate": {
                        "title": "Document Date",
                        "type": "string",
                        "x-hints" : {
                            "form": {
                              "inputComponent": "date"
                            }
                        }
                    }
                },
                "required": ["documentName", "documentDate"]
            },
            "title": "Other Documents",
            "type": "array"
        },
        "subject": {
            "ignore": true
        }
    },
    "required": ["purchaserNames", "facilityAgreementDate", "solicitorCertDate"]
}