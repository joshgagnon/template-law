                                "purchase",
                                "refinance"
                            ],
                            "enumNames": [
                                "Purchase",
                                "Refinance"
                            ]
                        }
                    },
                    "oneOf": [
                        {
                            "properties": {
                                "matterType": {
                                    "enum": ["purchase"]
                                }
                            }
                        },
                        {
                            "properties": {
                                "matterType": {
                                    "enum": ["refinance"]
                                }
                            }
                        }
                    ],
                    "x-hints": {
                        "form": {
                            "selector": "matterType"
                        }
                    }
                }

            }
        },
        "recipient": {
            "ignore": true
        },
        "newMortgagee": {
             "$ref": "#/definitions/recipient",
             "title": "New Mortgagee (recipient)"
        },
        "purchaserNames": {
            "items": {
                "type": "string",
                "title": "Purchaser Name",
                "minLength": 1
            },
            "minItems": 1,
            "title": "Purchaser Names",
            "type": "array"
        },
        "facilityAgreementDate": {
            "title": "Date of Facility Agreement",
            "type": "string",
            "x-hints" : {
                "form": {
                  "inputComponent": "date"
                }
            }
        },
        "solicitorCertDate": {
            "title": "Date of Solicitorâ€™s Certificate",
            "type": "string",
            "x-hints" : {
                "form": {
                  "inputComponent": "date"
                }
            }
        },
        "documents": {
            "items": {
                "type": "object",
                "properties": {
                    "documentName": {
                        "title": "Document Name",
                        "type": "string"
                    },
                    "documentDate": {
                        "title": "Document Date",
                        "type": "string",
                        "x-hints" : {
                            "form": {
                              "inputComponent": "date"
                            }
                        }
                    }
                },
                "required": ["documentName", "documentDate"]
            },
            "title": "Other Documents",
            "type": "array"
        },
        "subject": {
            "ignore": true
        }
    },
    "required": ["newMortgagee", "purchaserNames", "facilityAgreementDate", "solicitorCertDate"],
    "aliases": {
        "newMortgagee": "recipient"
    }
}