{
    "extends": "G01: Letter Template",
    "description": "Letter to Fincancier Enclosing Originals",
    "title": "CV07: Letter to Fincancier Enclosing Originals",
    "properties": {
        "matter": {
            "type": "object",
            "properties": {
                "assets": {
                    "$ref": "#/definitions/assets"
                },
                "letterFinancier": {
                    "type": "object",
                    "properties": {
                        "matterType": {
                            "title": "Letter To Financier Type",
